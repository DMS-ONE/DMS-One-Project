<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.dledledle.seunghoon.SeunghoonActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_black">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_activity_seunghoon_name"
            style="@style/BaseViewSeunghoon"
            android:hint="@string/name"
            android:paddingStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_activity_seunghoon_start"
            style="@style/BaseViewSeunghoon"
            android:text="@string/let_s_go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_activity_seunghoon_age"
            style="@style/TextViewPrimarySeunghoon"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_activity_seunghoon_age_unit"
            style="@style/TextViewPrimarySeunghoon"
            android:layout_marginStart="4dp"
            android:text="@string/age"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_activity_seunghoon_age"
            app:layout_constraintStart_toEndOf="@id/tv_activity_seunghoon_age" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_activity_seunghoon_count"
            style="@style/TextViewPrimarySeunghoon"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/tv_activity_seunghoon_count_unit"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_seunghoon_age" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_activity_seunghoon_count_unit"
            style="@style/TextViewPrimarySeunghoon"
            android:layout_marginStart="4dp"
            android:text="@string/has_tried"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_activity_seunghoon_count"
            app:layout_constraintEnd_toEndOf="@id/tv_activity_seunghoon_age_unit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>